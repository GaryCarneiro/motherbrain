#!/usr/bin/env ruby

require 'ruby-prof'
RubyProf.start
$:.push File.expand_path("../../lib", __FILE__)
require 'motherbrain'

MB::Cli::Runner.new(ARGV).execute!

data = RubyProf.stop

printer = RubyProf::MultiPrinter.new(data)

out_path = File.join(File.expand_path("../../profile", __FILE__), Time.now.strftime("%Y-%m-%d"))
FileUtils.mkdir_p(out_path)

printer.print(path: out_path)
